// A dark palette inspired by Japanese alleys lit by round lanterns.

themes {
    akari {
        // Base colors
        bg "#10141C"
        fg "#E6DED3"

        // UI colors
        black "#0D1016"
        red "#D25046"
        green "#7FAF6A"
        yellow "#D4A05A"
        blue "#5A6F82"
        magenta "#8E7BA0"
        cyan "#6F8F8A"
        white "#E6DED3"
        orange "#E26A3B"

        // Tab bar
        text_unselected_tab {
            base "#7E93A6"
            background "#10141C"
            emphasis_0 "#7E93A6"
            emphasis_1 "#7E93A6"
            emphasis_2 "#7E93A6"
            emphasis_3 "#7E93A6"
        }
        text_selected_tab {
            base "#E26A3B"
            background "#232B36"
            emphasis_0 "#E26A3B"
            emphasis_1 "#D4A05A"
            emphasis_2 "#7FAF6A"
            emphasis_3 "#E6DED3"
        }

        // Ribbon (status bar)
        ribbon_selected {
            base "#10141C"
            background "#E26A3B"
            emphasis_0 "#E26A3B"
            emphasis_1 "#D4A05A"
            emphasis_2 "#7FAF6A"
            emphasis_3 "#E6DED3"
        }
        ribbon_unselected {
            base "#7E93A6"
            background "#1B222B"
            emphasis_0 "#7E93A6"
            emphasis_1 "#7E93A6"
            emphasis_2 "#7E93A6"
            emphasis_3 "#7E93A6"
        }

        // Table title and body
        table_title {
            base "#E26A3B"
            background "#10141C"
            emphasis_0 "#E26A3B"
            emphasis_1 "#D4A05A"
            emphasis_2 "#7FAF6A"
            emphasis_3 "#E6DED3"
        }
        table_cell_selected {
            base "#E6DED3"
