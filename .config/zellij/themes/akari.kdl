        frame_selected {
            base "#E26A3B"
            background "#10141C"
            emphasis_0 "#E26A3B"
            emphasis_1 "#D4A05A"
            emphasis_2 "#7FAF6A"
            emphasis_3 "#E6DED3"
        }
        frame_unselected {
            base "#262F3B"
            background "#10141C"
            emphasis_0 "#262F3B"
            emphasis_1 "#262F3B"
            emphasis_2 "#262F3B"
            emphasis_3 "#262F3B"
        }
        frame_highlight {
            base "#D4A05A"
            background "#10141C"
            emphasis_0 "#D4A05A"
            emphasis_1 "#E26A3B"
            emphasis_2 "#7FAF6A"
            emphasis_3 "#E6DED3"
        }

        // Exit dialog
        exit_code_success {
            base "#7FAF6A"
            background "#10141C"
            emphasis_0 "#7FAF6A"
            emphasis_1 "#7FAF6A"
            emphasis_2 "#7FAF6A"
            emphasis_3 "#7FAF6A"
        }
        exit_code_error {
            base "#D25046"
            background "#10141C"
            emphasis_0 "#D25046"
            emphasis_1 "#D25046"
            emphasis_2 "#D25046"
