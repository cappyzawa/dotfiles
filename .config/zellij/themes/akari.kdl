        }
        table_cell_unselected {
            base "#7E93A6"
            background "#10141C"
            emphasis_0 "#7E93A6"
            emphasis_1 "#7E93A6"
            emphasis_2 "#7E93A6"
            emphasis_3 "#7E93A6"
        }

        // List and text
        list_selected {
            base "#E6DED3"
            background "#232B36"
            emphasis_0 "#E26A3B"
            emphasis_1 "#D4A05A"
            emphasis_2 "#7FAF6A"
            emphasis_3 "#E6DED3"
