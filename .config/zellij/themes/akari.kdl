        multiplayer_user_colors {
            player_1 "#E26A3B"
            player_2 "#7FAF6A"
            player_3 "#D4A05A"
            player_4 "#5A6F82"
            player_5 "#8E7BA0"
            player_6 "#6F8F8A"
            player_7 "#DE7F77"
            player_8 "#A1C492"
            player_9 "#E4C397"
            player_10 "#B4A7C0"
