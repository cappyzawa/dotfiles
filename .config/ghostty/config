# command = /opt/homebrew/bin/tmux

# Theme
theme = tokyonight

# Fonts
font-family = "Moralerspace Argon NF"
font-size = 20
adjust-underline-position = 4
bold-is-bright = true

# Mouse
mouse-hide-while-typing = true
cursor-invert-fg-bg=true

# Keybindings
keybind = clear
keybind = ctrl+t>h=goto_split:left
keybind = ctrl+t>l=goto_split:right
keybind = ctrl+t>k=goto_split:top
keybind = ctrl+t>j=goto_split:bottom
keybind = ctrl+t>c=new_tab
keybind = super+shift+h=previous_tab
keybind = super+shift+l=next_tab
keybind = super+shift+comma=move_tab:-1
keybind = super+shift+period=move_tab:1
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard
keybind = super+shift+enter=new_split:auto
keybind = super+shift+i=inspector:toggle
keybind = super+shift+m=toggle_split_zoom
keybind = super+shift+r=reload_config
keybind = super+shift+x=close_surface
keybind = super+shift+right=resize_split:right,30
keybind = super+shift+left=resize_split:left,30
keybind = super+shift+up=resize_split:up,30
keybind = super+shift+down=resize_split:down,30
keybind = super+shift+plus=increase_font_size:1
keybind = super+shift+minus=decrease_font_size:1

# Window
window-decoration = true
window-theme = ghostty
window-save-state = always

# Other
resize-overlay = never
working-directory = inherit
copy-on-select = true
confirm-close-surface = false
quit-after-last-window-closed = true
shell-integration = zsh
shell-integration-features = title,cursor,sudo
