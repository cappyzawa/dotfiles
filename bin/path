#!/usr/bin/env bash

. "$DOTPATH"/etc/lib/vital.sh
. "$DOTPATH"/etc/lib/standard.sh

get_path() {
    local arg opt_a opt_r
    local -a args

    if [ -z "$1" ]; then
        args+=(".")
    fi

    for arg in "$@"
    do
        case "$arg" in
            "-h"|"--help")
                echo "usage: path [-h|--help][-a|-r] path..."
                return
                ;;
            "-a"|"--absolute")
                opt_a=1
                shift
                ;;
            "-r"|"--relative")
                opt_r=1
                shift
                ;;
            -*|--*)
                echo "$arg: unknown option" 1>&2
                return 1
                ;;
            *)
                args+=("$arg")
                ;;
        esac
    done

    for arg in "${args[@]}"
    do
        if [[ $opt_r == 1 ]]; then
            rel_path "$arg"
        else
            : $opt_a
            abs_path "$arg"
        fi
    done
}

if is_osx; then
    get_path "$@" | (tee /dev/fd/3 | tr -d "\n" | pbcopy) 3>&1
else
    get_path "$@"
fi
